{
  "version": "2.3.4",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "rootDir": "./",
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "baseUrl": "./src"
  },
  "paths": {
    "*": ["*"]
  },
  "include": [
    "src/**/*.ts",
    "definitions/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
